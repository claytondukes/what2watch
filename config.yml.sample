# Logging settings
debug_level: 0
processed_file: "recommendations.yml"

openai:
  key: "your_key"
  model: "gpt-4o"
  max_tokens: 4096
  temperature: 0.7
  top_p: 1.0
  max_context_tokens: 128000  
  prompt_buffer_tokens: 500


# TVDB API settings
tvdb:
  api_key: "your_key"
  pin: "your_pin"

# Reddit settings for thread extraction
reddit:
  flair_url: "https://old.reddit.com/r/television/search/?q=flair%3A%22Weekly+Rec+Thread%22&sort=new&restrict_sr=on&t=year"
  week_start: "3 months ago" # set t=month in the url above or "week", etc.
  week_end: "today"
  max_threads: 2  # Reduce the number of threads to process for testing
  max_top_shows: 10  # Reduce for quicker testing

# Network settings
network:
  timeout: 20  # Timeout in seconds for network requests

# User preferences
preferences:
  favorite_shows:
    - Tulsa King
    - Game of Thrones
    - The Mandalorian
    - Seal Team
    - Last Week Tonight
    - The Union
    - Tracker
    - Mayans M.C.
    - Justified
    - Ted Lasso
    - Snowfall
    - Yellowstone
  preferred_genres:
    - action
    - science fiction
    - thriller
    - fantasy
    - comedy
      #cast:
      #preferred_cast:
      #avoid_cast:
  themes:
    preferred_themes:
      - anti-heroes
      - space exploration
      - spycraft
    avoid_themes:
      - romantic comedy
      - horror
      - detectives
      - animated
  avoid_shows:
    - From
    - The Office
    - Friends
    - House of Cards
    - Awards shows
    - Reality TV
    - Rescue
    - High Potential
